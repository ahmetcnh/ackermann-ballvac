      </link>
    </model>

    <!-- Purple Ball - positioned further away -->
    <model name="ball_purple">
      <pose>5.0 1.0 0.1 0 0 0</pose>
      <static>false</static>
      <link name="ball_link">
        <inertial>
          <mass>0.1</mass>
          <inertia>
            <ixx>0.00004</ixx>
            <ixy>0</ixy>
            <ixz>0</ixz>
            <iyy>0.00004</iyy>
            <iyz>0</iyz>
            <izz>0.00004</izz>
          </inertia>
        </inertial>
        <collision name="collision">
          <geometry>
            <sphere><radius>0.1</radius></sphere>
          </geometry>
        </collision>
        <visual name="visual">
          <geometry>
            <sphere><radius>0.1</radius></sphere>
          </geometry>
          <material>
            <ambient>0.6 0.0 0.8 1</ambient>
            <diffuse>0.6 0.0 0.8 1</diffuse>
            <specular>0.5 0.5 0.5 1</specular>
            <emissive>0.06 0.0 0.08 1</emissive>
          </material>
        </visual>
      </link>
    </model>

  </world>
</sdf>
