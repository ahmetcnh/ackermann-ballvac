        </collision>
        <visual name="visual">
          <geometry>
            <sphere><radius>0.1</radius></sphere>
          </geometry>
          <material>
            <ambient>0.0 1.0 1.0 1</ambient>
            <diffuse>0.0 1.0 1.0 1</diffuse>
            <specular>0.5 0.5 0.5 1</specular>
            <emissive>0.0 0.1 0.1 1</emissive>
